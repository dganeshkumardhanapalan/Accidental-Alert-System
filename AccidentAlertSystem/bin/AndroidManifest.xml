        </activity>
        <activity
            android:name=".ChartView"
            android:label="@string/title_activity_chart_view"
             android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".AdminHome"
            android:label="@string/title_activity_admin_home"
             android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".Filter"
            android:label="@string/title_activity_filter"
             android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ContactInfo"
            android:label="@string/title_activity_contact_info"
             android:configChanges="orientation|keyboardHidden" >
